{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/token": [
        "libs/token/src"
      ],
      "@app/token/*": [
        "libs/token/src/*"
      ],
      "@app/current-user": [
        "libs/current-user/src"
      ],
      "@app/current-user/*": [
        "libs/current-user/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}